{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}}</h1>
  <p>Welcome to {{title}}</p>

  {% if articles %}
    <div class='row'>
      {% for article in articles %}
        <div class="card" style="width: 18rem;">
          <img src='{{article.image}}' class="card-img-top" alt='{{article.name}}'>
          <div class="card-body">
            <h5 class="card-title">{{article.name}}</h5>
            <p class="card-text">{{article.content}}</p>
            <a href="/article/{{article.id}}" class="btn btn-primary">En savoir plus</a>
            <a href="/edit-article/{{article.id}}" class="btn btn-primary">Edit</a>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  

{% endblock %}
