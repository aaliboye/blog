{% extends "layout.twig" %}

{% block body %}

    {% if article %}
        
        <div class="" style="width: 100%;">
          <img src="{{article.image}}" height="400" width="1800" class="card-img-top" alt='{{article.name}}'>
          <div class="card-body">
            <h5 class="card-title">{{article.name}}</h5>
            <p> <strong> Published at </strong> {{aeticle.PublishedAt | date("dd/mm/yy")}} </p>
            <hr>
            <p class="card-text">{{article.content}}</p>

            <a href="/" class="btn btn-primary">back to home </a>
          </div>
        </div>
  
    {% endif %}
    

{% endblock %}